<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dessert"
    tools:context="com.example.foodorder.dessert">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#e53935"/>

    <ImageView
        android:id="@+id/chicken"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:src="@drawable/chocolate_cake"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate Cake"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30$"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="90dp"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/green"
        android:layout_width="135dp"
        android:layout_height="120dp"
        android:src="@drawable/strawberry_cake"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strawberry Cake"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="190dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30$"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="220dp"/>

    <ImageView
        android:id="@+id/pasta"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/choclate_icecream"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="310dp"
        android:layout_marginRight="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chocolate"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="325dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25$"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="355dp"/>

    <ImageView
        android:id="@+id/ceasar"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/coffee"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="450dp"
        android:layout_marginRight="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="455dp"
        android:layout_marginLeft="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20$"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="485dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/textView3" />

    <CheckBox
        android:id="@+id/chickenBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="185dp"/>

    <CheckBox
        android:id="@+id/greenBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="185dp"/>

    <CheckBox
        android:id="@+id/pastaBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="185dp"/>

    <CheckBox
        android:id="@+id/ceasarBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="185dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/nextbutton"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
